@model IEnumerable<SBD_Projekt.Models.Wydzial>

@{
    ViewData["Title"] = "Lista Wydziałów";
}

<h1>Lista Wydziałów</h1>

<p>
    <a asp-action="Create">Dodaj nowy wydział</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_budynku)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nazwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_budynku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nazwa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_wydzial">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.id_wydzial">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.id_wydzial">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
