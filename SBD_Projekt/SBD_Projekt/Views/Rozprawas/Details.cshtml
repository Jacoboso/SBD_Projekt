@model SBD_Projekt.Models.ViewModel.RozprawaDetailsViewModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły</h1>

<div>
    <h4>Rozprawa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Godziny:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Godziny.OdGodziny) do @Html.DisplayFor(model => model.Godziny.DoGodziny)
        </dd>
        <dt class = "col-sm-2">
            Sędzia:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sedzia.Imie) @Html.DisplayFor(model => model.Sedzia.Nazwisko)
        </dd>
        <dt class = "col-sm-2">
           Prawnik:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prawnik.Imie)  @Html.DisplayFor(model => model.Prawnik.Nazwisko)
        </dd>
        <dt class = "col-sm-2">
            Klient:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klient.Imie)  @Html.DisplayFor(model => model.Klient.Nazwisko)
        </dd>
        <dt class = "col-sm-2">
            Dowody: 
        </dt>
        <dd class="col-sm-10">
            @if (Model.Dowody != null)
            {
                foreach (var dowod in Model.Dowody)
                {
                  <p> @dowod.Nazwa typ: @dowod.Typ ,</p>

  
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id_rozprawa">Edytuj</a> |
    <a asp-action="Index">Wróć do listy</a>
</div>
