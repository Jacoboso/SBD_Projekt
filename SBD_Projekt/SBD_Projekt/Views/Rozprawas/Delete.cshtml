@model SBD_Projekt.Models.ViewModel.RozprawaDetailsViewModel

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Na pewno chcez to zrobić?</h3>
<div>
    <h4>Rozprawa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Godziny:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Godziny.OdGodziny) do @Html.DisplayFor(model => model.Godziny.DoGodziny)
        </dd>
        <dt class="col-sm-2">
            Sędzia:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sedzia.Imie) @Html.DisplayFor(model => model.Sedzia.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            Prawnik:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prawnik.Imie)  @Html.DisplayFor(model => model.Prawnik.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            Klient:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klient.Imie)  @Html.DisplayFor(model => model.Klient.Nazwisko)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_rozprawa" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
