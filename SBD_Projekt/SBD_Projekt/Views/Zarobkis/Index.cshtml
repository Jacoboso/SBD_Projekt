@model IEnumerable<SBD_Projekt.Models.Zarobki>

@{
    ViewData["Title"] = "Lista Zarobków";
}

<h1>Lista Zarobków</h1>

<p>
    <a asp-action="Create">Dodaj nowy zarobek</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.zarobek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.premia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.zarobek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.premia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_zarobki">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.id_zarobki">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.id_zarobki">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
