@model IEnumerable<SBD_Projekt.Models.Prawnik>

@{
    ViewData["Title"] = "Lista Prawników";
}

<h1>Lista Prawników</h1>

<p>
    <a asp-action="Create">Dodaj nowego prawnika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_osoba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_godziny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_zarobki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_specjalizacja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_osoba)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_godziny)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_zarobki)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_specjalizacja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_prawnik">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.id_prawnik">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.id_prawnik">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
