@model SBD_Projekt.Models.Sala

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Sala</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_sala" />
            <div class="form-group">
                <label asp-for="Rodzaj" class="control-label"></label>
                <input asp-for="Rodzaj" class="form-control" />
                <span asp-validation-for="Rodzaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wielkosc" class="control-label"></label>
                <input asp-for="Wielkosc" class="form-control" />
                <span asp-validation-for="Wielkosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
