@model SBD_Projekt.Models.Adres

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Adres</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_adres" />
            <div class="form-group">
                <label asp-for="Kraj" class="control-label"></label>
                <input asp-for="Kraj" class="form-control" />
                <span asp-validation-for="Kraj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miasto" class="control-label"></label>
                <input asp-for="Miasto" class="form-control" />
                <span asp-validation-for="Miasto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Województwo" class="control-label"></label>
                <input asp-for="Województwo" class="form-control" />
                <span asp-validation-for="Województwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ulica" class="control-label"></label>
                <input asp-for="Ulica" class="form-control" />
                <span asp-validation-for="Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nr_domu" class="control-label"></label>
                <input asp-for="Nr_domu" class="form-control" />
                <span asp-validation-for="Nr_domu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nr_miszkania" class="control-label"></label>
                <input asp-for="Nr_miszkania" class="form-control" />
                <span asp-validation-for="Nr_miszkania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
